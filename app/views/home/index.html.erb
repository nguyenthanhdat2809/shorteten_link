<div class="container">
  <div class="p-5">
    <div class="card">
      <div class="card-body">
        <%= form_for @link, remote: true do |form| %>
          <h5 class="card-title">Enter a URL to shorten</h5>
          <%= form.text_field :original_url, id: "link-input", class: "form-control", placeholder: "Enter URL..." %>
          <%= form.submit "Shorten", class: "btn btn-primary mt-2" %>
        <% end %>
        <div id="short-link"></div>
      </div>
    </div>

    <div class="lists-url mt-4">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="1">Original URL</th>
            <th colspan="3">Clicked</th>
          </tr>
        </thead>
        <tbody>
          <% @links.each do |link| %>
            <tr>
              <td class="col-7"><%= link_to link.short_link, "/#{link.lookup_code}", target: "_blank" %></td>
              <td class="col-2"><%= link.count_clicked %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
