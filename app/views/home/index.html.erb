<div class="container">
  <div class="p-5">
    <div class="card">
      <div class="card-body">
        <%= form_for Link.new, remote: true do |form| %>
          <h5 class="card-title">Enter a URL to shorten</h5>
          <%= form.text_field :original_url, id: "link-input", class: "form-control", placeholder: "Enter URL..." %>
          <%= form.submit "Shorten", class: "btn btn-primary mt-2" %>
        <% end %>
        <div id="short-link"></div>
      </div>
    </div>

    <div class="limit-record mt-2">
      <%= search_form_for @search, url: root_path do |f|%>
        <%= select_tag :limit, options_from_collection_for_select(Settings.show_limit, :second, :second,
        selected: params[:limit]), id: "show-limit", class: "form-select" %>
        <%= f.submit "search", class: "btn btn-info", style: "display: none; margin-right: 10px"%>
      <% end %>
    </div>

    <div id="links-list" class="lists-url mt-2">
      <%= render partial: "shareds/table", locals: { links: @links } %>
    </div>

    <div class="paging">
      <%= paginate @links %>
    </div>
  </div>
</div>
